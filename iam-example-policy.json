{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": [
        "SNS:CreatePlatformEndpoint",
        "SNS:CreateTopic",
        "SNS:DeleteEndpoint",
        "SNS:DeleteTopic",
        "SNS:GetEndpointAttributes",
        "SNS:ListTopics",
        "SNS:Publish",
        "SNS:SetEndpointAttributes",
        "SNS:Subscribe",
        "SNS:Unsubscribe"
      ],
      "Resource": [
        "add-your-topics-here",
        "add-your-platform-applications-here"
      ]
    }
  ]
}
